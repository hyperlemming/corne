#include "../../../corne.dtsi"

/ {
    chosen {
        zephyr,display = &nice_view;  // Changed from &oled
        zmk,kscan = &mock_kscan;      // Point to mock kscan
        zmk,physical-layout = &foostan_corne_6col_layout;
    };

    // Override the kscan to be empty for dongle
    mock_kscan: mock_kscan {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios = <>;  // No keys on dongle
    };
};

// Disable I2C, enable SPI for nice!view
&pro_micro_i2c {
    status = "disabled";
};

&pro_micro_spi {
    status = "okay";
};
